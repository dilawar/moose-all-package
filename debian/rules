#!/usr/bin/make -f

# export DH_VERBOSE=1
export BUILD_DIR_MOOSE=_build
export CURRDIR=$(shell pwd)
export PYTHONPATH=$(shell pwd)/../debian/tmp/$(PYTHON_LIBS))
GUI_BIN=debian/tmp/usr/bin/moosegui

## Here goes the debian make.

%:
	dh "$@" --with python2

override_dh_auto_clean:
	rm -rf $(BUILD_DIR_MOOSE)
	dh_auto_clean --buildsystem=cmake

# consider using -DUSE_VERSIONED_DIR=ON if backporting
override_dh_auto_configure:
	mkdir -p $(BUILD_DIR_MOOSE)
	cd $(BUILD_DIR_MOOSE) && cmake -DCMAKE_INSTALL_PREFIX=`pwd`/../debian/tmp/usr ../moose-python

override_dh_auto_build:
	cd $(BUILD_DIR_MOOSE) && make VERBOSE=0 -j`nproc`

override_dh_auto_install:
	cd $(BUILD_DIR_MOOSE) && make install
	cd moose-python/moose-core/python && python setup.py install --root=../../debian/tmp/moose --install-layout=deb
	# get the gui
	mkdir -p debian/tmp/usr/lib/moose/gui
	mkdir -p debian/tmp/usr/lib/moose/moose-examples
	rsync -azv --cvs-exclude moose-gui/moose-gui/ debian/tmp/moose/usr/lib/moose/gui/
	rsync -azv --cvs-exclude moose-gui/moose-examples/ debian/tmp/moose/usr/lib/moose/moose-examples/
	mkdir -p debian/tmp/usr/bin
	echo "#!/bin/bash" > $(GUI_BIN)
	echo "cd /usr/lib/moose/gui && python mgui.py" >> $(GUI_BIN)
	chmod a+x $(GUI_BIN)

override_dh_shlibdeps:
	dh_shlibdeps --dpkg-shlibdeps-params=--ignore-missing-info

override_dh_python2:
	dh_python2 --no-guessing-versions
